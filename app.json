{
  "expo": {
    "name": "Vocal Reminder",
    "slug": "vocal-reminder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "assets/icons/alarm-clock.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "assets/icons/alarm-clock.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to the microphone to record voice reminders.",
        "UIBackgroundModes": [
          "audio",
          "fetch",
          "remote-notification"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "assets/icons/alert.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.anonymous.vocalreminder"
    },
    "web": {
      "favicon": "assets/icons/notification (1).png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow $(Vocal Reminder) to access your microphone."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "assets/icons/alarm-clock.png",
          "color": "#ffffff",
          "sounds": [
            "assets/sounds/Animewow.mp3",
            "assets/sounds/Bird.mp3",
            "assets/sounds/BirdsChirping.mp3",
            "assets/sounds/DieWithASmile.mp3",
            "assets/sounds/GunShot.mp3",
            "assets/sounds/Iphone16ProMaxRingtone.mp3",
            "assets/sounds/IphoneMoneyHeistRingtone.mp3",
            "assets/sounds/jarvisalarm.mp3",
            "assets/sounds/minionswakeup.mp3",
            "assets/sounds/mixkitretrogameemergencyalarm.wav",
            "assets/sounds/OneLove.mp3",
            "assets/sounds/simplenotification.mp3",
            "assets/sounds/vineboom.mp3"
          ]
        }
      ]
    ]
  }
}
