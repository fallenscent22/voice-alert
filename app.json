{
  "expo": {
    "name": "Vocal Reminder",
    "slug": "vocal-reminder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "assets/icons/alarm-clock.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "assets/icons/alarm-clock.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs access to the microphone to record voice reminders.",
        "UIBackgroundModes": [
          "audio",
          "fetch",
          "remote-notification"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "assets/icons/alert.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "package": "com.anonymous.vocalreminder"
    },
    "web": {
      "favicon": "assets/icons/notification (1).png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow $(Vocal Reminder) to access your microphone."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "assets/icons/alarm-clock.png",
          "color": "#ffffff",
          "sounds": [
            "assets/sounds/Anime wow.mp3",
            "assets/sounds/Bird.mp3",
            "assets/sounds/Birds Chirping.mp3",
            "assets/sounds/Die With A Smile.mp3",
            "assets/sounds/Gun-Shot.mp3",
            "assets/sounds/Iphone 16 Pro Max Ringtone .mp3",
            "assets/sounds/Iphone Money Heist Ringtone.mp3",
            "assets/sounds/j_a_r_v_i_s_alarm.mp3",
            "assets/sounds/minions_wake_up.mp3",
            "assets/sounds/mixkit-retro-game-emergency-alarm-1000.wav",
            "assets/sounds/One Love.mp3",
            "assets/sounds/simple-notification.mp3",
            "assets/sounds/vine boom.mp3"
          ]
        }
      ]
    ]
  }
}
